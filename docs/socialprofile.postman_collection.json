{
  "info": {
    "_postman_id": "6e2b4aab-1866-4f30-833b-1f85edcae679",
    "name": "Social Profile Plugin",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "Integration checks for the Social Profile plugin."
  },
  "variable": [
    { "key": "base_url", "value": "http://127.0.0.1:8000" },
    { "key": "token", "value": "" },
    { "key": "nickname", "value": "demo" },
    { "key": "hmac_secret", "value": "" }
  ],
  "item": [
    {
      "name": "Coins (Public)",
      "request": {
        "method": "GET",
        "header": [{ "key": "Accept", "value": "application/json" }],
        "url": "{{base_url}}/api/social/v1/user/{{nickname}}/coins"
      }
    },
    {
      "name": "Coins (Authenticated)",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Accept", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": "{{base_url}}/api/social/v1/user/{{nickname}}/coins"
      }
    },
    {
      "name": "Bundle (Full Access)",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Accept", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": "{{base_url}}/api/social/v1/user/{{nickname}}/bundle"
      }
    },
    {
      "name": "Coins Update (HMAC)",
      "event": [
        {
          "listen": "prerequest",
          "script": {
            "type": "text/javascript",
            "exec": [
              "const payload = { balance: 10, hold: 0 };",
              "pm.variables.set('coins_payload', JSON.stringify(payload));",
              "if (pm.variables.get('hmac_secret')) {",
              "  const signature = CryptoJS.HmacSHA256(JSON.stringify(payload), pm.variables.get('hmac_secret')).toString();",
              "  pm.request.headers.upsert({ key: 'X-Social-Signature', value: signature });",
              "} else {",
              "  pm.request.headers.remove('X-Social-Signature');",
              "}"
            ]
          }
        }
      ],
      "request": {
        "method": "PUT",
        "header": [
          { "key": "Accept", "value": "application/json" },
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{{coins_payload}}"
        },
        "url": "{{base_url}}/api/social/v1/user/{{nickname}}/coins"
      }
    },
    {
      "name": "Violations List",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Accept", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": "{{base_url}}/api/social/v1/user/{{nickname}}/violations"
      }
    }
  ]
}
